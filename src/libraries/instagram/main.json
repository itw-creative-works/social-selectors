/*
  Normal + verified
  https://www.instagram.com/cats_of_instagram/
  https://www.instagram.com/p/B99fX3uFZFX/

  Private
  https://www.instagram.com/the_arxyn/

  No posts
  https://www.instagram.com/wmvofficial/

*/
{
  "global": {
    // Indicators
    "isOnPage": {
      "url": "/instagram\\.com/",
    },
    "isEnglish": {
      "object": { "selector": "html[lang*='en']", "wait": 15000 },
    },

    // Should work...
    // - https://www.instagram.com
    // - https://www.instagram.com/accounts/login
    // - https://www.instagram.com/cats_of_instagram/
    // - https://www.instagram.com/p/B99fX3uFZFX/
    "isLoggedOut": {
      "selector": "",
      "object": { "selector": "nav a, main button", "filters": [ {"match": { "innerText": "/Log In|Sign Up|Continue as/i" }} ] },
    },
    "profilePicture": {
      "selector": "img[alt*='s profile']",
    },
    "isPopupOpen": {
      "selector": "div[role='presentation'] TODO"
    },
    // Actions
    "searchBar": {
      "object": { "selector": "a svg[aria-label='Search']", "positionMethod": "bounding", "wait": 30000 },
    },
    // TODO
    "searchBar_item": {
      "object": { "selector": "[role='none'] a", "filters": [{"splice": [0, 5]}], "index": "$random", "wait": 30000 },
    },    
    // "searchBar_dropdown": {
    //   "selector": "div[role='dialog']",
    // },
    "notificationsReminder_disable": {
      "object": { "selector": "button", "filters": [ {"match": { "innerText": "/Not Now/i" }} ] },
    },
    /* "viewEngagementPopup_profileLink": {
      "selector(array)": "div[role='presentation'] img",
    }, */
    // Explore
    "postLink": {
      "selector(array)": "a[href*='/p/'] > div div:nth-child(2)",
    },
  },
  "home": {
    // Indicators
    "isOnPage": {
      "url": "/instagram.com($|\\/$|\\?|\\/\\?|\\#|\\/\\#)/",
    },
    // Actions
    "continueAsButton": {
      "object": { "selector": "button", "filters": [ {"match": { "innerText": "/Continue as/i" }} ] },
    },
  },
  "search": {
    // Indicators
    "isOnPage": {
      "url": "/instagram\\.com\\/explore/",
    },
    // Actions

  },
  "profile": {
    // Indicators
    // Good for testing loaded
    "isOnPage": {
      // "selector": "main header img",
      "selector": "svg[aria-label='Options']",
    },
    "isPrivate": {
      "object": {"selector": "main h2", "filters": [ {"match": { "innerText": "/This Account is Private/i" }} ], "index": 0 },
    },
    // Actions
    "followButton": {
      "object": {"selector": "header button", "filters": [ {"match": { "innerText": "/Follow$|Follow back$/i" }} ], "index": 0 },
    },
    // Stats
    "followerCount": {
      "object": {"selector": "header li a", "filters": [ {"match": { "innerText": "/followers$|follower$/i" }} ], "index": 0 },
    },
    "followingCount": {
      "object": {"selector": "header li a", "filters": [ {"match": { "innerText": "/following$/i" }} ], "index": 0 },
    },
    "postCount": {
      "object": {"selector": "header li div", "filters": [ {"match": { "innerText": "/ posts$| post$/i" }} ], "index": 0 },
    },
    // Explore
    "viewFollowersButton": {
      "object": "$get(profile.followerCount.object)",
    },
    "viewFollowingButton": {
      "object": "$get(profile.followingCount.object)",
    },

  },
  "profile_followers": {
    // Indicators
    "isOnPage": {
      "url": "/\\/followers/",
    },
    "isEmpty": {
      "selector": "",
    },
    // Explore
    "profileLink": { // Good for testing loaded
      "selector(array)": "div[role='dialog'] a",
    },
  },
  "profile_following": {
    // Indicators
    "isOnPage": {
      "url": "/\\/following/",
    },
    "isEmpty": {
      "selector": "",
    },
    // Explore
    "profileLink": {
      "selector(array)": "$get(profile_followers.profileLink.selector(array))",
    },
  },
  "post": {
    // Indicators
    "isOnPage": {
      "url": "(instagram.com\\/p\\/.*?)($|\\/$|\\/|\\?|\\/\\?|\\#|\\/\\#)",
    },
    "isVideoPost": {
      "selector": "main article video",
    },
    "isLiked": {
      "selector": "div:is([role=presentation], [role=dialog]) section button svg[aria-label='Unlike']",
    },

    // Actions
    "shareButton": { // Good load test
      "object": {"selector": "div:is([role=presentation], [role=dialog]) section button svg[aria-label='Share Post']", "wait": 30000, "positionMethod": "bounding" },
    },
    "followButton": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) button", "filters": [ {"match": { "innerText": "/Follow$|Follow back/i" }} ], "wait": 1000, "positionMethod": "bounding" },
    },
    "likeButton": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) section button svg[aria-label='Like']", "wait": 1000, "index": "$last", "positionMethod": "bounding" },
    },
    "videoPlayer": {
      "selector": "$get(post.isVideoPost.selector)",
    },
    "videoPlayButton": {
      "selector": "$get(post.isVideoPost.selector)",
    },
    "commentButton": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) textarea[placeholder*='comment']", "wait": 1000, "positionMethod": "bounding" },
    },
    "commentButton_confirmButton": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) form[method*='POST'] div[role='button']", "wait": 1000, "index": 1, "positionMethod": "bounding" },
    },    

    // Stats
    "likeCount": {
      // "object": {"selector": "div:is([role=presentation], [role=dialog]) a[href*='liked_by']", "filters": [ {"match": { "innerText": "/likes$|likes this$|others$/i" }} ], "index": "$last" },
      "object": {"selector": "div:is([role=presentation], [role=dialog]) a[href*='liked_by']", "wait": 1000, "index": "$last", "positionMethod": "bounding" },
    },
    "postDate": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) a[href*='/p/'] time", "retrieve": ["datetime"], "index": "$last" },
    },
    "postHeader": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) article header", "wait": 1000, },
    },

    /* "commentList": {
      "selector": "article"
    }, */

    // Explore
    "commentProfileLink": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) article a img", "filters": [{"splice": [1, 4]}, {"isVisible": true}], "index": "$random"}
    },
    "viewLikesButton": {
      "object": "$get(post.likeCount.object)",
    },

  },
  "post_likes": {
    "isOnPage": {
      "object": {"selector": "div[role='dialog'] h1", "filters": [ {"match": { "innerText": "/Likes/i" }} ], "index": 0, "wait": 30000 },
    },
    "profileLink": {
      "object": {"selector": "div:is([role=presentation], [role=dialog]) div[style*='overflow: hidden'] a", "filters": [{"splice": [0, 4]}], "index": "$random", "wait": 30000 },
    },
  },
  "error": {
    // Indicators
    "timeout": {
      "object": {"selector": "body", "filters": [ {"match": { "innerText": "/wait a few minutes/i" }} ] },
    },
  },
}
