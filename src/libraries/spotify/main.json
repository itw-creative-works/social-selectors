/*
  -----------------
  Spotify Selectors
  -----------------
*/
{
  /*
    Spotify Global Selectors
    https://open.spotify.com/*
  */  
  "global": {
    // Indicators
    "isOnPage": {
      "url": "/spotify\\.com/"
    },
    "isEnglish": {
      "object": { "selector": "html[lang*='en']" },
    },
    "isLoggedIn": {
      "object": { "selector": "button[data-testid='login-button']" },
    },
  },

  /*
    Spotify Track Selectors
    https://open.spotify.com/track/0yLdNVWF3Srea0uzk55zFn
  */    
  "track": {
    // Indicators
    "isOnPage": {
      "url": "/spotify\\.com\\/track/",
    },

    // Actions
    "playButton": {
      "selector": "main button[data-testid='play-button']",
    },
  },

  /*
    Spotify Error Selectors
    https://open.spotify.com/*
  */    
  "error": {
    // Indicators
    "spamWarning": {
      "selector": ".spamWarning"
    },
  }
}
