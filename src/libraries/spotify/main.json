/*
  -----------------
  Spotify Selectors
  -----------------
*/
{
  /*
    Spotify Global Selectors
    https://open.spotify.com/*
  */  
  "global": {
    // Indicators
    "isOnPage": {
      "url": "/spotify\\.com/"
    },
    "isEnglish": {
      "object": { "selector": "html[lang*='en']" },
    },
    "isLoggedIn": {
      "object": { "selector": "header button[data-testid='user-widget-link']" },
    },    
  },

  /*
    Spotify Signin Selectors
    https://accounts.spotify.com/en/login
  */  
  "signin": {
    // Properties
    "properties": {
      "url": "https://accounts.spotify.com/en/login",
    },

    // Indicators
    // "isOnPage": {
    //   "url": "/spotify\\.com/"
    // },
  },

  /*
    Spotify Track Selectors
    https://open.spotify.com/track/0yLdNVWF3Srea0uzk55zFn
  */    
  "track": {
    // Indicators
    "isOnPage": {
      "url": "/spotify\\.com\\/track/",
    },

    // Actions
    "playButton": {
      "selector": "main div[data-testid='action-bar-row'] button[data-testid='play-button']",
    },
  },

  /*
    Spotify Error Selectors
    https://open.spotify.com/*
  */    
  "error": {
    // Indicators
    "spamWarning": {
      "selector": ".spamWarning"
    },
    "isOffline": {
      "selector": "NOT_IMPLEMENTED_YET"
    },    
  }
}
