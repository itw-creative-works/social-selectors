{
  /*
    YouTube Global Selectors
    https://www.youtube.com/*
  */
  "global": {
    // Indicators
    "isOnPage": {
      "url": "/youtube\\.com/",
    },
    "isEnglish": {
      "object": { "selector": "html[lang*='en']" },
    },
    "isLoggedOut": {
      "selector": "a[href*='ServiceLogin']",
    },
  },

  /*
    YouTube Home Selectors
    https://www.youtube.com/*
  */  
  "home": {

  },

  /*
    YouTube Search Selectors
    https://www.youtube.com/*
  */  
  "search": {

  },

  /*
    YouTube Profile Selectors
    https://www.youtube.com/*
  */  
  "profile": {

  },  

  /*
    YouTube Post Selectors
    https://www.youtube.com/*
  */  
  "post": {
    // Indicators
    "videoIsPlaying": {
      "selector": "button.ytp-play-button[title*='Pause']",
    },

    // Actions
    "playButton": {
      "selector": "button.ytp-play-button[title*='Play']",
    },
  },
}
